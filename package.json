{
  "name": "raid-sl-clan",
  "private": true,
  "version": "0.1.0",
  "description": "Monorepo for backend, web, admin, bot, and MCP server",
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "build": "pnpm -r run build",
    "dev": "pnpm -r --filter ./apps/* run dev",
    "lint": "pnpm -r run lint",
    "typecheck": "pnpm -r run typecheck"
  },
  "workspaces": [
    "apps/*",
    "services/*",
    "packages/*"
  ],
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "typescript": "^5.6.3"
  },
  "pnpm": {
    "overrides": {
      "react-is": "18.3.1"
    }
  }
}
